<Window x:Class="Ex4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
      
        <local:UserSoundControls ControllerType="Volume"  Grid.Row="1" Margin="0,0,0,0" ></local:UserSoundControls>
        <local:UserSoundControls ControllerType="Bass"  Grid.Row="2" Margin="0,50,0,0" ></local:UserSoundControls>
        <local:UserSoundControls ControllerType="Amplify"  Grid.Row="3" Margin="0,100,0,0" ></local:UserSoundControls>
        

    </Grid>
</Window>
